<h1>hola mundo</h1>

<%= link_to 'Crear Nuevo Memo', todos_new_path%>


<ul class="list-group">
  <% @todos.each do |item|%>
  <li class="list-group-item"><%= item.description%>
  <%= link_to 'Show',todo_path(item.id),class:'btn btn-success'%>
  <%= link_to 'Edit',edit_todo_path(item.id),class:'btn btn-warning'%>
  <%= link_to 'Delete',delete_todo_path(item.id), method: :delete ,class:'btn btn-danger'%>
  <%= link_to 'Completed',complete_path(item.id), method: :patch ,class:'btn btn-info'%>
  </li>
  <% end %>
</ul>
